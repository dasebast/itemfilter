#--------------------------------------------------------------------------
# HIDES
#--------------------------------------------------------------------------

#Hide useless bases
# -------------------------------------------------------------------------
Show
    BaseType "Cloth Belt" "Studded Belt" "Paua Amulet" "Coral Amulet" "Paua Ring" "Iron Ring" "Moonstone Ring"
    Rarity = Normal
    SetTextColor 200 200 200 180
    SetBackgroundColor 0 0 0 180
    SetFontSize 25
    ItemLevel >= 30

#Show all other jewellery
# -------------------------------------------------------------------------
Show
    Class "Rings" "Amulets" "Belts"


#Show All Early
# -------------------------------------------------------------------------
Show
    ItemLevel <= 45


#Hide Low Level Flask at high levels
# -------------------------------------------------------------------------
Hide
    BaseType Flask
    ItemLevel >= 35
    BaseType Small Medium Large Greater Grand

Hide
    BaseType Flask
    ItemLevel >= 53
    BaseType Giant Colossal Sacred


# Hide everything else lowering the font size and transparency
# -------------------------------------------------------------------------
Show
    Rarity = Normal
    SetTextColor 200 200 200 127
    SetBackgroundColor 0 0 0 150
    SetFontSize 29

Show
    Rarity = Magic
    SetTextColor 136 136 255 127
    SetBackgroundColor 0 0 0 150
    SetFontSize 29

